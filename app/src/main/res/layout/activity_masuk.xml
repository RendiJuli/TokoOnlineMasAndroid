<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.Register">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/cover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:fontFamily="@font/graphiksemibold"
        android:text="Welcome"
        android:textColor="#4D5AAF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/graphikregular"
        android:maxLines="1"
        android:text="Silahkan buat akun anda"
        android:textColor="#4D5AAF"/>


    <Button
        android:id="@+id/btn_prosesLogin"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:background="@drawable/send_sms_button"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:background="@drawable/button_signup"
        android:text="Register"
        android:textColor="#000"
        android:textSize="20sp"/>


</LinearLayout>